    EFI_ACPI_6_0_GICC_STRUCTURE_INIT (
      // A55-0
      0,
      0,
      GET_MPID (0, 0x000),
      EFI_ACPI_6_0_GIC_ENABLED,
      23,
      0,
      0,
      0,
      25,
      0,
      0
      ),
    EFI_ACPI_6_0_GICC_STRUCTURE_INIT (
      // A55-1
      0,
      1,
      GET_MPID (0, 0x100),
      EFI_ACPI_6_0_GIC_ENABLED,
      23,
