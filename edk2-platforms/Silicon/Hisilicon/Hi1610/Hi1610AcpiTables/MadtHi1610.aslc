  EFI_ACPI_6_1_GIC_DISTRIBUTOR_INIT(0, FixedPcdGet32 (PcdGicDistributorBase), 0, 0x4),
  {
    EFI_ACPI_6_1_GIC_ITS_INIT(0,0xC6000000),
  }
